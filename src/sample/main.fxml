<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          minWidth="1000"
>
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <Text text="Inventory Management System"
          textAlignment="CENTER"
          GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3"/>
    <GridPane
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          GridPane.columnIndex="0" GridPane.rowIndex="1"
          style="-fx-border-color:#DDD; -fx-border-width: 1; -fx-border-style: solid; -fx-border-radius: 10px"
          minWidth="450"
    >
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        <Text text="Parts"
              GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="Search"
                GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField
            GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TableView
            fx:id="partsTable"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            GridPane.columnSpan="3"
            minWidth="425"
        >
            <columns>
                <TableColumn text="Part ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="partID" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Part Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Inventory Level" minWidth="120">
                    <cellValueFactory>
                        <PropertyValueFactory property="partID" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Price/Cost per unit" minWidth="140">
                    <cellValueFactory>
                        <PropertyValueFactory property="price" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <Button
                text="Add"
                GridPane.columnIndex="0"
                GridPane.rowIndex="2"
                fx:id="addPartButton"
        />
        <Button text="Modify" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button text="Delete" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    </GridPane>
    <GridPane
            xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
            GridPane.columnIndex="2" GridPane.rowIndex="1"
            style="-fx-border-color:#DDD; -fx-border-width: 1; -fx-border-style: solid; -fx-border-radius: 10px"
            minWidth="450"
    >
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        <Text text="Products"
              GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="Search"
                GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField
                GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TableView
                fx:id="productsTable"
                GridPane.columnIndex="0"
                GridPane.rowIndex="1"
                GridPane.columnSpan="3"
                minWidth="425"
        >
            <columns>
                <TableColumn text="Product ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="productID" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Product Name" minWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Inventory Level" minWidth="120">
                    <cellValueFactory>
                        <PropertyValueFactory property="inStock" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Price per unit" minWidth="120">
                    <cellValueFactory>
                        <PropertyValueFactory property="price" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <Button text="Add" GridPane.columnIndex="0" GridPane.rowIndex="2" fx:id="addProductButton"/>
        <Button text="Modify" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button text="Delete" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    </GridPane>

    <Button
            text="Exit"
            GridPane.columnIndex="2"
            GridPane.rowIndex="2"
            GridPane.halignment="RIGHT"
            fx:id="exitButton"
    />
</GridPane>